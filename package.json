{
  "name": "inclusive-todo-graphql-server",
  "version": "1.0.0",
  "description": "Inclusive TODO Server, using Apollo stack",
  "main": "index.js",
  "repository": "git@github.com:inclusive-e/backend.git",
  "author": "Inclusive team",
  "license": "ISC",
  "scripts": {
    "start": "nodemon --inspect --signal SIGTERM",
    "run-migration": "prisma migrate dev",
    "run-seeding": "prisma db seed --preview-feature",
    "format": "prisma format",
    "clean-build": "npm tsc --build --clean",
    "build-prod": "npm tsc --build tsconfig.prod.json",
    "run-prod": "npm clean-build && npm build-prod && node ./build/app.js",
    "tsc": "tsc"
  },
  "dependencies": {
    "@graphql-tools/utils": "^8.1.2",
    "@prisma/client": "^3.9.2",
    "apollo-server": "^3.3.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-scalars": "^1.10.1",
    "graphql-tools": "^8.1.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^12.0.0",
    "helmet": "^4.6.0",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.12",
    "prisma": "^3.9.2",
    "reflect-metadata": "^0.1.13",
    "stream": "^0.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/express": "^4.17.13",
    "@types/graphql-upload": "8.0.3",
    "@types/node": "^16.10.3",
    "@types/nodemailer": "^6.4.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
